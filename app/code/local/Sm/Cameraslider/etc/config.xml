<config>
    <modules>
        <Sm_Cameraslider>
            <version>1.0.1</version>
        </Sm_Cameraslider>
    </modules>
    <global>
    	<models>
    		<sm_cameraslider>
    			<class>Sm_Cameraslider_Model</class>
                <resourceModel>cameraslider_resource</resourceModel>
    		</sm_cameraslider>
            <cameraslider_resource>
                <class>Sm_Cameraslider_Model_Resource</class>
                <entities>
                    <slide>
                        <table>sm_cameraslider_slide</table>
                    </slide>
                    <sliders>
                        <table>sm_cameraslider_sliders</table>
                    </sliders>
                </entities>
            </cameraslider_resource>
    	</models>
        <resources>
            <sm_cameraslider_setup>
                <setup>
                    <module>Sm_Cameraslider</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sm_cameraslider_setup>
            <sm_cameraslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sm_cameraslider_write>
            <sm_cameraslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sm_cameraslider_read>
        </resources>

    	<blocks>
            <sm_cameraslider>
    			<class>Sm_Cameraslider_Block</class>
    		</sm_cameraslider>
            <adminhtml>
                <rewrite>
                    <cms_wysiwyg_images_content>Sm_Cameraslider_Block_Adminhtml_Cms_Wysiwyg_Images_Content</cms_wysiwyg_images_content>
                </rewrite>
            </adminhtml>
    	</blocks>
    	<helpers>
    		<sm_cameraslider>
    			<class>Sm_Cameraslider_Helper</class>
    		</sm_cameraslider>
            <cms>
                <rewrite>
                    <wysiwyg_images>Sm_Cameraslider_Helper_Cms_Wysiwyg_Images</wysiwyg_images>
                </rewrite>
            </cms>
    	</helpers>
    </global>

    <frontend>
        <routers>
            <sm_cameraslider>
                <use>standard</use>
                <args>
                    <module>Sm_Cameraslider</module>
                    <frontName>cameraslider</frontName>
                </args>
            </sm_cameraslider>
        </routers>
        <layout>
            <updates>
                <sm_cameraslider>
                    <file>sm/cameraslider.xml</file>
                </sm_cameraslider>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <sm_cameraslider>
                    <file>sm/cameraslider.xml</file>
                </sm_cameraslider>
            </updates>
        </layout>
        <cms>
            <browser>
                <extensions>
                    <media_allowed>
                        <mp4>1</mp4>
                        <webm>1</webm>
                        <ogv>1</ogv>
                        <ogg>1</ogg>
                    </media_allowed>
                </extensions>
            </browser>
        </cms>
    </adminhtml>

    <admin>
        <routers>
            <sm_cameraslider>
                <use>admin</use>
                <args>
                    <module>Sm_Cameraslider</module>
                    <frontName>cameraslider</frontName>
                </args>
            </sm_cameraslider>
            <adminhtml>
                <args>
                    <modules>
                        <Sm_Cameraslider before="Mage_Adminhtml">Sm_Cameraslider_Adminhtml</Sm_Cameraslider>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <cameraslider>
            <general>
                <enabled>0</enabled>
	            <use_widget>0</use_widget>
	            <slide></slide>
            </general>
	        <jquery>
		        <include_jquery>0</include_jquery>
		        <use_cache>1</use_cache>
		        <cache_time>3600</cache_time>
	        </jquery>
        </cameraslider>
    </default>
</config>
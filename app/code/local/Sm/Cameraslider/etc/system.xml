<config>
	<tabs>
		<sm translate="label">
			<label>Magentech.com</label>
			<sort_order>300</sort_order>
		</sm>
	</tabs>
	<sections>
		<cameraslider translate="label">
			<label>SM Camera Slider</label>
			<tab>sm</tab>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<sort_order>260</sort_order>
			<groups>
				<general>
					<label>General Settings</label>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enabled Extension</label>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</enabled>
						<use_widget>
							<label>Use Widget</label>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</use_widget>
						<slide>
							<label>Select Slide</label>
							<sort_order>5</sort_order>
							<frontend_type>multiselect</frontend_type>
							<source_model>sm_cameraslider/source_Slide</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</slide>
					</fields>
					<!-- Other Fields -->
				</general>

				<jquery>
					<label>Include Jquery</label>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<include_jquery translate="label">
							<label>Include jQuery</label>
							<frontend_type>radios</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</include_jquery>
						<use_cache translate="label">
							<label>Caching</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Select whether to cache the content of this module
							</comment>
						</use_cache>
						<cache_time>
							<label>Cache Time</label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<validate>validate-greater-than-zero</validate>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>The time (in seconds) before the module is recached.</comment>
							<depends>
								<use_cache>1</use_cache>
							</depends>
						</cache_time>
					</fields>
				</jquery>

				<product_information translate="label">
					<label>Product Information</label>
					<frontend_type>text</frontend_type>
					<sort_order>17</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<author translate="label">
							<label><![CDATA[<p>Author: <a target="_blank" title="Magentech" href="http://www.magentech.com">Magentech</a></p>
											<p>Vesion: 1.0.1</p>
											<p>Userguide: <a target="_blank" title="Userguide" href="http://www.magentech.com/documentation/sm-camera-slider/">Userguide</a></p>
											<p>Support: <a target="_blank" href="http://www.magentech.com/forum">Support</a></p>
								]]>
							</label>
							<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
						</author>
					</fields>
				</product_information>
				<!-- Other Groups -->
			</groups>
		</cameraslider>
	</sections>
</config>